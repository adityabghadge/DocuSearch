# ------------------
# App
# ------------------
APP_ENV=dev
LOG_LEVEL=INFO

# ------------------
# Chunking (deterministic)
# ------------------
CHUNK_SIZE_CHARS=1200
CHUNK_OVERLAP_CHARS=150

# ------------------
# Retrieval defaults
# ------------------
DEFAULT_TOP_K=5

# ------------------
# Embeddings
# ------------------
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# ------------------
# Postgres
# ------------------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=docusearch
POSTGRES_USER=docusearch
POSTGRES_PASSWORD=docusearch

DATABASE_URL=postgresql+psycopg://docusearch:docusearch@db:5432/docusearch

# ------------------
# Qdrant
# ------------------
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=docusearch_chunks
QDRANT_DISTANCE=cosine

# ------------------
# QA / LLM (optional, off by default)
# ------------------
USE_LLM=false